<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:padding="@dimen/_5sdp"
    android:background="@color/bgcolor">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_1sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/linear"
                android:layout_alignBottom="@+id/linear"
                android:src="@drawable/elcard"
                android:scaleType="centerCrop"/>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp"
                android:id="@+id/linear"

                >

                <TextView
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/cName"
                    android:textStyle="bold"
                    android:textColor="@color/colorTxt"
                    />

                <TextView
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/cCompany"
                    android:textStyle="bold"
                    android:textColor="@color/colorTxt"
                    />

                <TextView
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/cAddress"
                    android:textStyle="bold"
                    android:textColor="@color/colorTxt"
                    />
                <TextView
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/gmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/cEmail"
                    android:textStyle="bold"
                    android:textColor="@color/colorTxt"
                    />
                <TextView
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:drawableStart="@drawable/telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/cPhone"
                    android:textStyle="bold"
                    android:textColor="@color/colorTxt"
                    />


            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>