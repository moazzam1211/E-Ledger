<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    android:background="@color/cardview_shadow_end_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bgcolor"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/viewitembarcodename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTxt"
            android:textStyle="bold"
            android:text="Product Barcode" />


        <TextView
            android:id="@+id/viewitembarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:textColor="@color/colorTxt"
            android:layout_marginLeft="50dp"
            android:layout_toEndOf="@+id/viewitembarcodename"
            android:text="TextView"
            android:layout_toRightOf="@+id/viewitembarcodename" />

        <TextView
            android:id="@+id/viewitemnamename"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTxt"
            android:textStyle="bold"
            android:text="Product Name" />


        <TextView
            android:id="@+id/viewitemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/colorTxt"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/viewitemnamename"
            android:text="TextView"
            android:layout_toRightOf="@+id/viewitemnamename" />

        <TextView
            android:id="@+id/viewitempricename"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTxt"
            android:textStyle="bold"
            android:text="Product Price $" />

        <TextView
            android:id="@+id/viewitemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorTxt"
            android:layout_toEndOf="@+id/viewitempricename"
            android:text="TextView"
            android:layout_toRightOf="@+id/viewitempricename" />

        <TextView
            android:id="@+id/viewitemcategoryname"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorTxt"
            android:text="Product Category" />

        <TextView
            android:id="@+id/viewitemcategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/colorTxt"
            android:layout_toEndOf="@+id/viewitemcategoryname"
            android:text="TextView"
            android:layout_toRightOf="@+id/viewitemcategoryname" />
        <TextView
            android:id="@+id/viewitemqtyname"
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorTxt"
            android:text="Product Qty" />

        <TextView
            android:id="@+id/viewitemqty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/viewitemqtyname"
            android:layout_toRightOf="@+id/viewitemqtyname"
            android:text="TextView"
            android:textColor="@color/colorTxt" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>