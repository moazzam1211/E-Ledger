<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInvoices"
    android:fillViewport="true"
    android:background="@color/bgcolor"
    android:padding="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_5sdp"
            android:id="@+id/card"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_49sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/eeledger"
                  />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Invoice"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Products to create invoice"
                    android:textSize="@dimen/_10sdp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Product"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorTxt"/>
                <Spinner
                    android:spinnerMode="dropdown"
                    android:id="@+id/selectPro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Quantity"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorTxt"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <Spinner
                    android:id="@+id/selectQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click Plus sign to add more Products"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/colorTxt"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <ImageView
                    android:id="@+id/addMore"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:src="@drawable/adds" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Customer"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorTxt"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <Spinner
                    android:id="@+id/selectCus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="generate"
                    android:background="@drawable/btn_bg"
                    android:textColor="#ffff"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/addIn"
                    />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>